<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:gravity="right|center"
            android:textSize="70pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/resultTextView"
            android:autoText="false"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <!--1й ряд кнопок (верхний)-->
        <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent">
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/ac"
                    android:text="AC"
                    android:textSize="15pt"
                    android:layout_marginLeft="1pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorUpperRow"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt"
                    android:onClick="acEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/plusminus"
                    android:text="+/-"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorUpperRow"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/devide"
                    android:text="/"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorUpperRow"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="operEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/multiple"
                    android:text="*"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorRicht"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="operEvent">

            </Button>
        </TableRow>
        <!--2й ряд кнопок -->
        <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent">
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1" android:id="@+id/b7"
                    android:text="7"
                    android:textSize="15pt"
                    android:layout_marginLeft="1pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/b8"
                    android:text="8"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/b9"
                    android:text="9"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/percent"
                    android:text="%"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorRicht"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt"
                    android:onClick="percentEvent">

            </Button>
        </TableRow>
        <!--3й ряд кнопок -->
        <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent">
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1" android:id="@+id/b4"
                    android:text="4"
                    android:textSize="15pt"
                    android:layout_marginLeft="1pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/b5"
                    android:text="5"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/b6"
                    android:text="6"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/incriment"
                    android:text="+"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorRicht"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="operEvent">

            </Button>
        </TableRow>
        <!--4й ряд кнопок -->
        <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/b1"
                    android:text="1"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/b2"
                    android:text="2"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/b3"
                    android:text="3"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1" android:id="@+id/decriment"
                    android:text="-"
                    android:textSize="15pt"
                    android:layout_marginLeft="1pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorRicht"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="operEvent">

            </Button>
        </TableRow>
        <!--5й ряд кнопок -->
        <TableRow
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/nul"
                    android:text="0"
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorNums"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/dot"
                    android:text="."
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorRicht"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt" android:onClick="numberEvent">

            </Button>
            <Button
                    android:layout_width="30pt"
                    android:layout_height="30pt"
                    android:layout_weight="1"
                    android:id="@+id/equal"
                    android:text="="
                    android:textSize="15pt"
                    android:layout_marginLeft="0pt"
                    android:layout_marginTop="1pt"
                    android:layout_marginRight="1pt"
                    android:background="@color/colorRicht"
                    android:layout_marginBottom="1pt"
                    android:layout_margin="1pt"
                    android:onClick="equalEveht">

            </Button>
        </TableRow>

    </TableLayout>

</LinearLayout>